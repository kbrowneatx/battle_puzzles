<table id="battalions-table" class="table table-striped">
  <thead>
  <th>Battalions</th>
  <th>Unit Class</th>
  <th>Description</th>
  <th></th>
  </thead>

  <tbody>
  <%= f.fields_for(:battalions) do |bn_form| %>
    <tr class="fields">
      <td><%= bn_form.text_field(:name, class: 'span3') %></td>
      <td><%= bn_form.collection_select(:unit_class_id, UnitClass.selectable, :id, :name) %></td>
      <td><%= bn_form.text_field(:health, class: 'span2', disabled: 'disabled') %></td>
      <%# if current_page?(new_army_path) || current_page?(edit_army_path) %>
      <td>
        <%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, bn_form, :title => "Delete this Battalion.") %>
      </td>
      <%# end %>
    </tr>
  <% end %>

  </tbody>
</table>

